<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.service.taskreport.mapper.persistence.TaskExecutionReportPersistenceMapper">
    <resultMap id="TaskExecutionReportResultMap" type="TaskExecutionReport">
        <id property="id" column="task_execution_id"/>
        <id property="taskId" column="task_id"/>
        <id property="startDateTime" column="start_date_time"/>
        <id property="endDateTime" column="end_date_time"/>
        <id property="executionTimeSeconds" column="execution_time_seconds"/>
        <id property="errorMessage" column="error_message"/>
        <id property="status" column="status"/>
        <id property="insertDate" column="insert_date"/>
        <id property="updateDate" column="update_date"/>
    </resultMap>

    <select id="findAllTaskExecutionReport" resultType="TaskExecutionReport" resultMap="TaskExecutionReportResultMap">
        SELECT * FROM task_execution_report
    </select>

    <insert id="insertTaskExecutionReport" parameterType="TaskExecutionReport" keyProperty="id" keyColumn="task_execution_id"
            useGeneratedKeys="true">
        INSERT INTO task_execution_report (task_id, start_date_time, end_date_time,
        execution_time_seconds, error_message, status) VALUES (#{taskId}, #{startDateTime}, #{endDateTime},
        #{executionTimeSeconds}, #{errorMessage}, #{status})
    </insert>

    <update id="updateTaskExecutionReport" parameterType="TaskExecutionReport">
        UPDATE task_execution_report
        SET task_id = #{taskId}, start_date_time = #{startDateTime}, end_date_time = #{endDateTime},
        execution_time_seconds = #{executionTimeSeconds}, error_message = #{errorMessage}, status = #{status}
        WHERE task_execution_id = #{id}
    </update>

    <delete id="deleteTaskExecutionReport" parameterType="int">
        DELETE FROM task_execution_report WHERE task_execution_id = #{id}
    </delete>

    <select id="findByIdTaskExecutionReport" parameterType="int" resultType="TaskExecutionReport" resultMap="TaskExecutionReportResultMap">
        SELECT * FROM task_execution_report WHERE task_execution_id = #{id}
    </select>

    <select id="findByStatusTaskExecutionReport" parameterType="string" resultType="TaskExecutionReport"
            resultMap="TaskExecutionReportResultMap">
        SELECT * FROM task_execution_report WHERE status = #{status}
    </select>

    <select id="findByExecutionTimeSecondsIsNotNullOrderByExecutionTimeSecondsDescTaskExecutionReport" resultType="TaskExecutionReport"
            resultMap="TaskExecutionReportResultMap">
        SELECT * FROM task_execution_report WHERE execution_time_seconds IS NOT NULL ORDER BY execution_time_seconds
        DESC
    </select>

    <select id="findByStartDateTimeIsNotNullAndEndDateTimeIsNotNullAndExecutionTimeSecondsIsNullTaskExecutionReport"
            resultType="TaskExecutionReport" resultMap="TaskExecutionReportResultMap">
        SELECT * FROM task_execution_report WHERE start_date_time IS NOT NULL AND end_date_time IS NOT NULL AND
        execution_time_seconds IS NULL
    </select>
</mapper>